@model WebApp.Models.Translator.Translations.TranslationsIndexVm
@{
    ViewData["Title"] = "Translations";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <div class="d-flex gap-2">
        <form method="get" class="d-flex gap-2">
            <select name="languageId" class="form-select">
                @foreach (var l in Model.LanguageOptions)
                {
                    <option value="@l.Id" selected="@(l.Id == Model.SelectedLanguageId ? "selected" : null)">
                        @l.Display
                    </option>
                }
            </select>
            <input type="number" class="form-control" name="version" min="1"
                   value="@(Model.SelectedVersion?.ToString() ?? "")" placeholder="Version" />
            <button type="submit" class="btn btn-outline-secondary">Filter</button>
        </form>
        <a asp-action="CreateVersions" asp-route-languageId="@Model.SelectedLanguageId" class="btn btn-primary">
            Create new version
        </a>
    </div>
</div>

<table class="table table-sm align-middle">
    <thead>
        <tr>
            <th style="width:40%">Resource key</th>
            <th>Content(@Model.Rows.FirstOrDefault()?.LanguageTag)</th>
            <th class="text-end" style="width:10%">Version</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Rows.Count == 0)
    {
        <tr>
            <td colspan="3" class="text-muted">No items.</td>
        </tr>
    }
    else
    {
        foreach (var r in Model.Rows)
        {
            <tr>
                <td>
                    <div class="fw-semibold">@r.FriendlyKey</div>
                    @* <div class="text-muted small">@r.ResourceKey</div> *@
                </td>
                <td>@(string.IsNullOrWhiteSpace(r.Content) ? Html.Raw("<span class=\"text-muted\">—</span>") : r.Content)</td>
                <td class="text-end">@((r.VersionNumber is null) ? Html.Raw("<span class=\"text-muted\">—</span>") : r.VersionNumber)</td>
            </tr>
        }
    }
    </tbody>
</table>
