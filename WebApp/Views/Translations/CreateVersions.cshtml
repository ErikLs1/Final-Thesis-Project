@model WebApp.Models.Translator.Versions.CreateVersionsVm

@{
    ViewData["Title"] = "Create new translation versions";
}
@{
    var currentLang = Model.LanguageOptions
        .FirstOrDefault(l => l.Id == Model.LanguageId)?.Display;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="CreateVersions" method="post">
    <div class="row g-3 mb-3">
        <div class="col-md-12">
            <label class="form-label fw-semibold">
                Currently you create translations for
                <span class="badge bg-primary" style="font-size: 0.95rem;">
                    @currentLang
                </span>
            </label>

            <input type="hidden" asp-for="LanguageId" />
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th style="width:200px">Resource key</th>
                    <th style="width:200px">New content</th>
                    <th class="text-center" style="width:200px">Include</th>
                </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model.Items[i].ResourceKeyId" />
                        <input type="hidden" asp-for="@Model.Items[i].ResourceKey" />
                        <input type="hidden" asp-for="@Model.Items[i].FriendlyKey" />
                        <div class="fw-semibold">@Model.Items[i].FriendlyKey</div>
                    </td>
                    <td>
                        <textarea class="form-control content-box"
                                  asp-for="@Model.Items[i].Content"
                                  rows="3"
                                  placeholder="Enter content (optional)"></textarea>
                        <span asp-validation-for="@Model.Items[i].Content" class="text-danger"></span>
                    </td>
                    <td class="text-center">
                        <input class="form-check-input include-toggle"
                               type="checkbox"
                               asp-for="@Model.Items[i].Include" />
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create versions</button>
        <a asp-action="Index" asp-route-languageId="@Model.LanguageId" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

