@model WebApp.Models.Translator.Versions.CreateVersionsVm

@{
    ViewData["Title"] = "Create new translation versions";
    var currentLang = Model.LanguageOptions
        .FirstOrDefault(l => l.Id == Model.LanguageId)?.Display;
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<!-- TOP FILTERS (GET) -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <form method="get" class="d-flex align-items-center gap-2">
        <input type="hidden" name="languageId" value="@Model.LanguageId" />
        <input type="hidden" name="page" value="1" /> @* reset on new filter *@
        <input type="hidden" name="pageSize" value="@Model.PageSize" />

        <input type="text" class="form-control" name="q" value="@Model.Search" placeholder="Search keys" />

        <button type="submit" class="btn btn-outline-secondary">Search</button>
    </form>
</div>

<!-- POST FORM -->
<form asp-action="CreateVersions" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="LanguageId" />
    <input type="hidden" asp-for="Search" />
    <input type="hidden" asp-for="Page" />
    <input type="hidden" asp-for="PageSize" />

    <div class="mb-3">
        Currently you create translations for
        <span class="badge bg-primary" style="font-size: 0.95rem;">@(currentLang ?? "—")</span>
    </div>

    <table class="table table-sm align-middle">
        <thead>
        <tr>
            <th style="width: 1%"></th>
            <th style="width:40%">Key</th>
            <th>Default content</th>
            <th>Your new content</th>
        </tr>
        </thead>

        <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-muted">No items.</td>
            </tr>
        }
        else
        {
            @for (var i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <input type="hidden" asp-for="Items[i].ResourceKeyId" />
                    <input type="hidden" asp-for="Items[i].ResourceKey" />
                    <input type="hidden" asp-for="Items[i].FriendlyKey" />
                    <input type="hidden" asp-for="Items[i].DefaultContent" />

                    <td>
                        <input class="form-check-input" type="checkbox" asp-for="Items[i].Include" />
                    </td>

                    <td>
                        <div class="fw-semibold">@Model.Items[i].FriendlyKey</div>
                        <div class="text-muted small">@Model.Items[i].ResourceKey</div>
                    </td>

                    <td class="text-muted">
                        @(string.IsNullOrWhiteSpace(Model.Items[i].DefaultContent) ? "—" : Model.Items[i].DefaultContent)
                    </td>

                    <td>
                        <input class="form-control form-control-sm"
                               asp-for="Items[i].Content"
                               placeholder="Type translation..." />
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create versions</button>
        <a asp-action="Index" asp-route-languageId="@Model.LanguageId" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

<!-- BOTTOM PAGER (GET) - same pattern as Index -->
<div class="d-flex justify-content-between align-items-center mt-3">

    <form method="get" class="d-flex align-items-center gap-2">
        <input type="hidden" name="languageId" value="@Model.LanguageId" />
        <input type="hidden" name="q" value="@Model.Search" />
        <input type="hidden" name="page" value="1" /> @* reset to first page when changing size *@

        <label for="pageSizeBottom" class="mb-0">Rows:</label>
        <select id="pageSizeBottom" name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()">
            @{
                var sizes = new[] { 10, 25, 50, 100 };
                foreach (var s in sizes)
                {
                    <option value="@s" selected="@(Model.PageSize == s)">@s</option>
                }
            }
        </select>
    </form>

    <nav>
        <ul class="pagination pagination-sm mb-0">
            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="CreateVersions"
                   asp-route-languageId="@Model.LanguageId"
                   asp-route-q="@Model.Search"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-pageSize="@Model.PageSize">Prev</a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">
                    Page @Model.Page of @Model.TotalPages (@Model.TotalCount total)
                </span>
            </li>

            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="CreateVersions"
                   asp-route-languageId="@Model.LanguageId"
                   asp-route-q="@Model.Search"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-pageSize="@Model.PageSize">Next</a>
            </li>
        </ul>
    </nav>

</div>