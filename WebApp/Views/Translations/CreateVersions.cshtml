@model WebApp.Models.Translator.Versions.CreateVersionsVm

@{
    ViewData["Title"] = "Create new translation versions";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form asp-action="CreateVersions" method="post">
    @Html.AntiForgeryToken()

    <div class="row g-3 mb-3">
        <div class="col-md-6">
            <label class="form-label">Target language</label>
            <select asp-for="LanguageId"
                    asp-items="@(new SelectList(Model.LanguageOptions, "Id", "Display", Model.LanguageId))"
                    class="form-select">
            </select>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th style="width:32%">Resource key</th>
                    <th style="width:33%">Default content (for reference)</th>
                    <th>New content</th>
                    <th class="text-center" style="width:8%">Include</th>
                </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model.Items[i].ResourceKeyId" />
                        <input type="hidden" asp-for="@Model.Items[i].ResourceKey" />
                        <input type="hidden" asp-for="@Model.Items[i].FriendlyKey" />
                        <div class="fw-semibold">@Model.Items[i].FriendlyKey</div>
                    </td>
                    <td class="text-muted">
                        @if (!string.IsNullOrWhiteSpace(Model.Items[i].DefaultContent))
                        {
                            @Model.Items[i].DefaultContent
                        }
                        else
                        {
                            @Html.Raw("<span class=\"text-muted\">â€”</span>")
                        }
                    </td>
                    <td>
                        <textarea class="form-control content-box"
                                  asp-for="@Model.Items[i].Content"
                                  rows="3"
                                  placeholder="Enter content (optional)"></textarea>
                        <span asp-validation-for="@Model.Items[i].Content" class="text-danger"></span>
                    </td>
                    <td class="text-center">
                        <input class="form-check-input include-toggle"
                               type="checkbox"
                               asp-for="@Model.Items[i].Include" />
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create versions</button>
        <a asp-action="Index" asp-route-languageId="@Model.LanguageId" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

