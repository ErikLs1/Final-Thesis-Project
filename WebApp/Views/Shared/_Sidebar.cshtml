@using App.Domain.Enum

<div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-bg-dark sticky-top"
     style="width:100%; height: calc(100vh - 56px); top: 56px;">
    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <i class="bi bi-bag me-2" style="font-size:1.8rem;"></i>
        <span class="fs-4">@(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Home)))</span>
    </a>

    <hr class="border-secondary" />

    <ul class="nav nav-pills flex-column mb-3">
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Home)))
            </a>
        </li>
        <li>
            <a class="nav-link text-white">
                <i class="bi bi-speedometer2 me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Dashboard)))
            </a>
        </li>
        <li>
            <a class="nav-link text-white">
                <i class="bi bi-table me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Order)))
            </a>
        </li>
        <li>
            <a class="nav-link text-white">
                <i class="bi bi-grid me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Product)))
            </a>
        </li>
    </ul>

    <hr class="border-secondary" />

    <!-- Categories -->
    <div class="text-uppercase text-secondary small mb-2">@(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Heading_Categories)))</div>
    <ul class="nav nav-pills flex-column mb-3">
        <li><a class="nav-link text-white" asp-route-slug="monitors"><i class="bi bi-display me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Category_Monitor)))</a></li>
        <li><a class="nav-link text-white" asp-route-slug="laptops"><i class="bi bi-laptop me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Category_Laptop)))</a></li>
        <li><a class="nav-link text-white" asp-route-slug="keyboards"><i class="bi bi-keyboard me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Category_Keyboard)))</a></li>
        <li><a class="nav-link text-white" asp-route-slug="mice"><i class="bi bi-mouse me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Category_Mouse)))</a></li>
        <li><a class="nav-link text-white" asp-route-slug="audio"><i class="bi bi-headphones me-2"></i> @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Category_Headphones)))</a></li>
    </ul>

    <!-- Role-specific area -->
    @if (User.IsInRole(RoleType.Admin.ToString()) || User.IsInRole("Admin"))
    {
        <div class="text-uppercase text-secondary small mb-2">Admin</div>
        <ul class="nav nav-pills flex-column mb-3">
            <li><a class="nav-link text-white" asp-controller="AdminTranslations" asp-action="Index"><i class="bi bi-speedometer me-2"></i> Manage Translation</a></li>
        </ul>
    }
    else if (User.IsInRole(RoleType.Reviewer.ToString()))
    {
        <div class="text-uppercase text-secondary small mb-2">Reviewer</div>
        <ul class="nav nav-pills flex-column mb-3">
            <li><a class="nav-link text-white" asp-controller="Reviews" asp-action="Queue"><i class="bi bi-inboxes me-2"></i> Review Translations</a></li>
        </ul>
    }
    else if (User.IsInRole(RoleType.Translator.ToString()))
    {
        <div class="text-uppercase text-secondary small mb-2">Translator</div>
        <ul class="nav nav-pills flex-column mb-3">
            <li><a class="nav-link text-white" asp-controller="LanguageSelection" asp-action="MyLanguages"><i class="bi bi-translate me-2"></i> Language Selection</a></li>
        </ul>
        <ul class="nav nav-pills flex-column mb-3">
            <li><a class="nav-link text-white" asp-controller="Translations" asp-action="Index"><i class="bi bi-translate me-2"></i> Translations</a></li>
        </ul>
    }
</div>
