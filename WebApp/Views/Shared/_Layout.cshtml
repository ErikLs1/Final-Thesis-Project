@using System.Globalization
@inject Microsoft.Extensions.Localization.IStringLocalizerFactory Factory
@{
    var navigation = Factory.Create("Navigation.Navigation", "App.Data");
}
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Localization App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">@navigation["Navigation_Home"]</a></li>
                    <li class="nav-item"><a class="nav-link">@navigation["Navigation_Product"]</a></li>
                    <li class="nav-item"><a class="nav-link">@navigation["Navigation_About_Us"]</a></li>
                    <li class="nav-item"><a class="nav-link">@navigation["Navigation_Contact"]</a></li>
                </ul>
                
                <partial name="_LanguageSelection" />
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

<div>
    <div class="row g-4">
        <div class="col-12 col-md-4 col-lg-3 col-xl-2">
            @await Html.PartialAsync("_Sidebar")
        </div>

        <div class="col-12 col-md-8 col-lg-9 col-xl-10">
            <main role="main" class="py-3">
                @RenderBody()
            </main>
        </div>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>