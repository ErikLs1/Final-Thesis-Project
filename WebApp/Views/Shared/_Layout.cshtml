@using System.Globalization

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
<header class="app-topbar sticky-top">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-3 px-lg-4">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <span class="brand-mark" aria-hidden="true">
                    <i class="bi bi-globe2"></i>
                </span>
                <span class="brand-name">Localization App</span>
            </a>

            <button class="navbar-toggler border-0 shadow-none"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#topNav"
                    aria-controls="topNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <i class="bi bi-list fs-2"></i>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto mt-2 mt-lg-0 gap-lg-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2 d-lg-none"></i>
                            @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Home)))
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Product)))
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_About_Us)))
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            @(await Translation.GetAsync(nameof(App.Data.Resources.Resources.Navigation_Contact)))
                        </a>
                    </li>
                </ul>

                <!-- Right side -->
                <div class="d-flex align-items-center gap-2 ms-lg-3 mt-3 mt-lg-0">
                    <div class="topbar-pill">
                        <partial name="_LanguageSelection" />
                    </div>

                    <div class="topbar-pill">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<div>
    <div class="row g-4">
        <div class="col-12 col-md-4 col-lg-3 col-xl-2">
            @await Html.PartialAsync("_Sidebar")
        </div>

        <div class="col-12 col-md-8 col-lg-9 col-xl-10">
            <main role="main" class="py-3">
                @RenderBody()
            </main>
        </div>
    </div>
</div>

<footer class="app-footer mt-auto">
    <div class="container-fluid px-3 px-lg-4">
        <div class="footer-inner py-3">
            <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2">
                <div class="text-muted small">
                    <span class="me-2">&copy; 2025</span>
                    <span class="fw-semibold text-body">WebApp</span>
                    <span class="mx-2 text-muted">•</span>
                    <span class="text-muted">Localization platform</span>
                </div>

                <div class="d-flex flex-wrap gap-3 small">
                    <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                        Privacy
                    </a>
                    <a class="footer-link" href="#">
                        Terms
                    </a>
                    <a class="footer-link" href="#">
                        Support
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>