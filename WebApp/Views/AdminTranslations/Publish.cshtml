@model WebApp.Models.Admin.Translations.AdminPublishTranslationsVm

@{
    ViewData["Title"] = "Publish translations";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="mb-3">
    <span class="text-muted">Language:</span>
    <span class="badge bg-primary">@Model.SelectedLanguageTag</span>
</div>

<form asp-action="Publish" method="post">
    <input type="hidden" asp-for="SelectedLanguageId" />
    <input type="hidden" asp-for="SelectedLanguageTag" />

    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
            <tr>
                <th style="width:25%">Resource key</th>
                <th>Content preview</th>
                <th class="text-end" style="width:8%">Version</th>
                <th style="width:12%">State</th>
                <th class="text-center" style="width:8%">Publish</th>
            </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Model.Rows.Count; i++)
            {
                <tr>
                    <td>
                        <div class="fw-semibold">@Model.Rows[i].FriendlyKey</div>
                    </td>
                    <td class="text-truncate" style="max-width: 480px;">
                        @if (!string.IsNullOrWhiteSpace(Model.Rows[i].Content))
                        {
                            @Model.Rows[i].Content
                        }
                        else
                        {
                            <span class="text-muted">â€”</span>
                        }
                    </td>
                    <td class="text-end">@Model.Rows[i].VersionNumber</td>
                    <td>
                        <span class="badge bg-light text-dark">@Model.Rows[i].CurrentState</span>
                    </td>
                    <td class="text-center">
                        <input type="hidden"
                               asp-for="@Model.Rows[i].TranslationVersionId" />

                        <input class="form-check-input"
                               type="checkbox"
                               asp-for="@Model.Rows[@i].Selected" />
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            Publish selected
        </button>

        <a asp-action="Index"
           asp-route-languageId="@Model.SelectedLanguageId"
           class="btn btn-outline-secondary">
            Cancel
        </a>
    </div>
</form>
