@model WebApp.Models.Translator.Languages.TranslatorMyLanguagesVm
@{
    ViewData["Title"] = "My languages";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

@if (!Model.HasAny)
{
    <div class="alert alert-info">
        You haven't selected any languages yet. Please select the languages you know.
    </div>

    <a asp-controller="LanguageSelection" asp-action="Languages" class="btn btn-primary">
        Select languages
    </a>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-2">
        <a asp-controller="LanguageSelection" asp-action="Languages" class="btn btn-outline-primary btn-sm">
            Edit
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
            <tr>
                <th style="width: 40%">Language</th>
                <th style="width: 20%">Tag</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var lang in Model.Selected)
            {
                <tr>
                    <td>@lang.Name</td>
                    <td><code>@lang.Tag</code></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
