@model WebApp.Models.Translator.Languages.TranslatorLanguagesSelectionVm
@{
    ViewData["Title"] = "Languages I know";
}

<div class="page-head mb-3">
    <div>
        <h2 class="page-title mb-1">@ViewData["Title"]</h2>
        <div class="page-subtitle">Select all that apply</div>
    </div>

    <div class="page-actions">
        <a asp-action="MyLanguages" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back
        </a>
    </div>
</div>

<form asp-action="Languages" method="post" class="vstack gap-3">
    <div class="card app-card">
        <div class="card-body p-3 p-lg-4">

            <!-- Toolbar -->
            <div class="row g-2 align-items-end">
                <div class="col-12 col-lg-6">
                    <label class="form-label mb-1" for="langSearch">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input id="langSearch"
                               type="search"
                               class="form-control"
                               placeholder="Type to filter languagesâ€¦"
                               autocomplete="off" />
                    </div>
                </div>

                <div class="col-12 col-lg-6 d-flex flex-wrap align-items-center justify-content-lg-end gap-2">
                    <span class="badge text-bg-light border">
                        <span id="selectedCount">0</span> selected
                    </span>

                    <button type="button" class="btn btn-outline-secondary btn-sm" id="selectAllBtn">
                        <i class="bi bi-check2-square me-2"></i>Select all
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="clearBtn">
                        <i class="bi bi-square me-2"></i>Clear
                    </button>
                </div>
            </div>

            <hr class="my-3" />

            <!-- Grid -->
            <div class="row g-2" id="langGrid">
                @for (var i = 0; i < Model.Languages.Count; i++)
                {
                    var display = Model.Languages[i].Display ?? "";
                    <div class="col-12 col-md-6 col-xl-4 lang-col"
                         data-search="@display.ToLowerInvariant()">

                        <div class="lang-card h-100">
                            <input type="hidden" asp-for="Languages[i].Id" />

                            <div class="d-flex align-items-start gap-3">
                                <input class="form-check-input mt-1"
                                       type="checkbox"
                                       asp-for="Languages[i].Selected"
                                       id="lang_@i" />

                                <label class="mb-0 flex-grow-1" for="lang_@i">
                                    <div class="fw-semibold lang-title">@display</div>
                                    <div class="text-muted small">Click to toggle selection</div>
                                </label>
                            </div>
                        </div>

                    </div>
                }
            </div>

        </div>

        <div class="card-footer bg-transparent border-0 p-3 p-lg-4 pt-0">
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-end">
                <a asp-action="MyLanguages" class="btn btn-outline-secondary">
                    Cancel
                </a>
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-check2 me-2"></i>Save changes
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<script>
(function () {
    const search = document.getElementById('langSearch');
    const grid = document.getElementById('langGrid');
    const cols = Array.from(grid.querySelectorAll('.lang-col'));
    const checkboxes = Array.from(grid.querySelectorAll('input[type="checkbox"]'));
    const selectedCount = document.getElementById('selectedCount');
    const selectAllBtn = document.getElementById('selectAllBtn');
    const clearBtn = document.getElementById('clearBtn');

    function updateCardState() {
        checkboxes.forEach(cb => {
            const card = cb.closest('.lang-card');
            if (!card) return;
            card.classList.toggle('is-selected', cb.checked);
        });
        selectedCount.textContent = checkboxes.filter(x => x.checked).length.toString();
    }

    function filter() {
        const q = (search.value || '').trim().toLowerCase();
        cols.forEach(col => {
            const hay = col.getAttribute('data-search') || '';
            col.classList.toggle('d-none', q.length > 0 && !hay.includes(q));
        });
    }

    checkboxes.forEach(cb => cb.addEventListener('change', updateCardState));
    search.addEventListener('input', filter);

    selectAllBtn.addEventListener('click', function () {
        checkboxes.forEach(cb => cb.checked = true);
        updateCardState();
    });

    clearBtn.addEventListener('click', function () {
        checkboxes.forEach(cb => cb.checked = false);
        updateCardState();
    });

    updateCardState();
})();
</script>
}