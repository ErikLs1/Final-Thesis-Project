@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@Translation["Heading_Products"]</h2>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-1">Laptop Pro X</h5>
                    <div class="fw-bold h5 mb-3">€1,499.00</div>
                    <div class="mb-2" aria-label="rating">★★★★★</div>
                    <p class="card-text">Perfect for creators and students who need performance in a compact body.</p>
                </div>
                <div class="card-footer bg-transparent border-0 d-grid gap-2">
                    <a class="btn btn-primary">@Translation["Button_Product_Add_To_Cart"]</a>
                    <a class="btn btn-outline-secondary">@Translation["Button_Product_Details"]</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-1">Wireless Headphones</h5>
                    <div class="fw-bold h5 mb-3">€199.00</div>
                    <div class="mb-2" aria-label="rating">★★★★☆</div>
                    <p class="card-text">Immersive sound with active noise cancelling and all-day comfort.</p>
                </div>
                <div class="card-footer bg-transparent border-0 d-grid gap-2">
                    <a class="btn btn-primary">@Translation["Button_Product_Add_To_Cart"]</a>
                    <a class="btn btn-outline-secondary">@Translation["Button_Product_Details"]</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-1">4K Monitor 27"</h5>
                    <div class="fw-bold h5 mb-3">€329.00</div>
                    <div class="mb-2" aria-label="rating">★★★★☆</div>
                    <p class="card-text">Crisp visuals and smooth motion — perfect for work and play.</p>
                </div>
                <div class="card-footer bg-transparent border-0 d-grid gap-2">
                    <a class="btn btn-primary">@Translation["Button_Product_Add_To_Cart"]</a>
                    <a class="btn btn-outline-secondary">@Translation["Button_Product_Details"]</a>
                </div>
            </div>
        </div>

    </div>
</div>