@model WebApp.Models.TranslatorLanguagesVm
@{
    ViewData["Title"] = "Languages I know";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Languages" method="post">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        @for (var i = 0; i < Model.Languages.Count; i++)
        {
            <div class="col">
                <div class="form-check border rounded p-2">
                    <input type="hidden" asp-for="Languages[i].Id" />
                    <input class="form-check-input" type="checkbox" asp-for="Languages[i].Selected" id="lang_@i" />
                    <label class="form-check-label" for="lang_@i">
                        @Model.Languages[i].Display
                    </label>
                </div>
            </div>
        }
    </div>

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="MyLanguages" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>