@model WebApp.Models.Translator.Languages.TranslatorLanguagesSelectionVm
@{
    ViewData["Title"] = "Languages I know";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Languages" method="post">
    <div class="row g-2">
        @for (var i = 0; i < Model.Languages.Count; i++)
        {
            <div class="col-12 col-md-6">
                <div class="lang-item d-flex align-items-center border rounded p-2">
                    <input type="hidden" asp-for="Languages[i].Id" />
                    <input class="form-check-input position-static me-3 flex-shrink-0"
                           type="checkbox"
                           asp-for="Languages[i].Selected"
                           id="lang_@i" />
                    <label class="mb-0 flex-grow-1" for="lang_@i">
                        @Model.Languages[i].Display
                    </label>
                </div>
            </div>
        }
    </div>

    <div class="mt-3 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="MyLanguages" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>